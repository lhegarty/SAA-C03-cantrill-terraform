####################################
# Adopt Default VPC into terraform #
####################################

resource "aws_default_vpc" "default" {
  tags = {
    Name = "Default VPC"
  }
}

###############################
# Edit Default Security Group #
###############################

## SSH not on group by default

resource "aws_default_security_group" "default" {
  vpc_id = aws_default_vpc.default.id

  ingress {
    protocol  = -1
    self      = true
    from_port = 0
    to_port   = 0
  }

  ingress {
    description = "SSH from the internet"
    from_port   = 22
    to_port     = 22
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }

  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }
}